<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="TextAppearance.GlobaliD.Headline5.Bold.White" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- region Heading 5 -->
    <style name="TextAppearance.GlobaliD.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">0.0</item>
    </style>

    <style name="GlobaliD.Widget.Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:inset">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.GlobaliD.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textSize">24sp</item>
        <item name="lineHeight">28sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">-0.005</item>
    </style>

    <style name="TextAppearance.GlobaliD.Headline3.Semibold">
    </style>

    <!--suppress UnusedResources -->
    <style name="TextAppearance.GlobaliD.Display1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textSize">60sp</item>
        <item name="lineHeight">60sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.GlobaliD.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="lineHeight">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:letterSpacing">-0.01</item>
    </style>

    <style name="TextAppearance.GlobaliD.Body1.Inverse" parent="TextAppearance.GlobaliD.Body1">
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
    </style>

    <style name="GlobaliD.Widget.Button.Primary.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAppearance">@style/TextAppearance.GlobaliD.Headline5</item>
        <item name="rippleColor">@null</item>
    </style>

    <style name="GlobaliD.Widget.Button.Primary.Text.WithIcon">
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">start</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="GlobaliD.Widget.Button.Primary.Text.WithIcon.End">
        <item name="android:textAlignment">center</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/black</item>
    </style>


    <style name="GlobaliD.Widget.Button.Primary.Text.WithIcon.End.White">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
    </style>

</resources>
